<button type="button" id="test" onclick="myFunction1(0)">x-axis</button>
<button type="button" id="test" onclick="myFunction2(0)">y-axis</button>
<button type="button" id="test" onclick="myFunction3(0)">z-axis</button>

<button type="button" id="test" onclick="myFunction1(1)">x-axis</button>
<button type="button" id="test" onclick="myFunction2(1)">y-axis</button>
<button type="button" id="test" onclick="myFunction3(1)">z-axis</button>
<p1 id = 'output'></p1><br>
<div id="chartContainer1" style="height: 370px; width: 50%;"></div><br>

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script type="text/javascript" src="testDataPoints.js"></script>
